<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "CalcTest">
    <listeners>
        <listener class-name="calculator.SetUpTearDown" />
    </listeners>
    <test name="test suite" parallel="tests" thread-count="4">
        <groups>
            <define name="all">
                <include name="test-add"/>
                <include name="test-sub"/>
                <include name="test-mult"/>
                <include name="test-div"/>
            </define>
            <define name="div">
                <include name="test-div"/>
            </define>
            <run>
                <include name="all"/>
                <!--<include name="div"/>-->
                <!--<exclude name="div"/>-->
            </run>
        </groups>
        <packages>
            <package name="test"/>
        </packages>
    </test>

</suite>